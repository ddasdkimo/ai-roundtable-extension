{
  "manifest_version": 3,
  "name": "AI Roundtable",
  "version": "1.0.0",
  "description": "Host AI roundtable discussions with Claude, ChatGPT, and Gemini â€” cross-evaluate and deeply collaborate.",
  "permissions": [
    "storage",
    "sidePanel",
    "activeTab",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "src/panel/panel.html"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "public/icon-16.png",
      "48": "public/icon-48.png",
      "128": "public/icon-128.png"
    }
  },
  "options_page": "src/popup/options.html",
  "icons": {
    "16": "public/icon-16.png",
    "48": "public/icon-48.png",
    "128": "public/icon-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
